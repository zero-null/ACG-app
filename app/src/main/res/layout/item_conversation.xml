<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/iv_conversation_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView android:id="@+id/tv_convasation_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_conversation_avatar"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView android:id="@+id/tv_convasation_newest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_conversation_avatar"/>

    <TextView android:id="@+id/tv_convasation_updatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView android:id="@+id/tv_convasation_unreadcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"/>

</RelativeLayout>